/* pages/choice/choice.wxss */
.search{
  width: 88%;
  margin-left: 6%;
  margin-bottom: 20rpx;
  background: #fff;
}
.search_arr {
  border: 1px solid #d0d0d0;
  border-radius: 50rpx;
  margin-left: 20rpx;
  text-align: center;
}
.search_arr input{
  margin-left: 60rpx;
  height: 60rpx;
  border-radius: 5px;
}
.bc_text {
  line-height: 68rpx;
  height: 68rpx;
  margin-top: 34rpx;
}
.page_row{
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: row
}
.searchcion {
  margin: 18rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left:300rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}
.nav{
  width: 100%;
  height: 200rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
}
.nav-1{
  flex: 1;
  text-align: center;
  margin-top: 28rpx;
  
}
.nav image{
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}
