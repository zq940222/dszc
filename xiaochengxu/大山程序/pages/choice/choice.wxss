/* pages/component/Recommend/Recommend.wxss */
.recommend-wrap{
  width: 750rpx;
  height: 100%;
  background: #fff;
  text-align: center;
  margin-top: 20rpx;
}
.recommend-list{
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
}
.recommend-list-1{
  margin-top: 22rpx;
  text-align: center;
  width: 46%;
  margin-left: 2.5%
}
.recommend-list-connent{
  overflow: hidden;
  width: 96%;
  margin-left: 2%;
  border-radius: 10rpx;
  box-shadow:1rpx 1rpx 2rpx rgba(0, 0, 0, .1);
}
.recommend-list-title{
  width: 100%;
  text-align: left;
  margin-left: 22rpx;
  font-size: 32rpx;
}
.recommend-list-item{
  width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: left;
  margin-left: 22rpx;
  margin-top: 5rpx;
}
.recommend-title{
  height: 96rpx;
  line-height: 96rpx;
  font-size: 20px;
}
.recommend-list-img image{
  width: 334rpx;
  height: 250rpx;
}
.recommend-list-price{
  margin-top: 5rpx;
  display: flex;
  justify-content: space-between;
}
.recommend-list-price-l{
  margin-top: 10rpx;
  margin-left: 22rpx;
  font-size: 32rpx;
  color: #C7151C;
}
.recommend-list-price-r{
  margin-right: 22rpx;
}
.recommend-list-price-r image{
  width: 52rpx;
  height: 52rpx;
}
.recommend-list-conent{
  width: 83%;
  margin-left: 8%;
  border-right:1px solid #fff;
  border-bottom: 1px solid #fff;
}